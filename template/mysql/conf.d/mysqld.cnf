[mysqld]
# Listening IP
bind-address            = 0.0.0.0

# LOGGING
general_log                     = 1
general_log_file                = /var/log/mysql/mysql.log
log-error                       = /var/log/mysql/mysql-error.log
slow_query_log                  = 1
slow_query_log_file             = /var/log/mysql/mysql-slow.log
long_query_time                 = 1
log-queries-not-using-indexes   = 1
